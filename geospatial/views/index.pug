extends layout

block content
  
  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    div(class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom")      
      
        div(class="card")
          img(class="card-img-top" src="/images/Safety.png")
          div(class="card-body")
            h5(class="card-title") Fares
            p(class="card-text") Shows the average fares for each starting trip in the map.
            a(href="/fares" class="btn btn-primary") Open Visualization

        div(class="card")
          img(class="card-img-top" src="/images/Heatmap.png")
          div(class="card-body")
            h5(class="card-title") Heatmap
            p(class="card-text") Shows a heatmap with the amount of trips per location
            a(href="/heatmap" class="btn btn-primary") Open Visualization
